extra-source-files: CHANGELOG.md

library
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N -Wall
  exposed-modules:
    CronMyLife.Lib
    CronMyLife.Model
    CronMyLife.Presentation
    CronMyLife.Persistent.Entities
    CronMyLife.Persistent.Repository

  -- Modules included in this executable, other than Main.
  -- other-modules:

